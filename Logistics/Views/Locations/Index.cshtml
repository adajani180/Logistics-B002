@using MVCGrid.Web

@{
    ViewBag.Icon = "pe-7s-global";
    ViewBag.Title = "Locations";
    ViewBag.Message = "Manage Locations.";

    Html.RenderPartial("~/Views/Shared/Luna/_PageHeader.cshtml");
}

@section CustomJs{
    <script src="@Url.Content("~/Scripts/Location/locations.js")" type="text/javascript"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div id="panelLocations" class="panel panel-filled">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-2">
                        <a id="btn-add" class="btn btn-success btn-sm active">Add</a>
                    </div>
                    <div class="col-lg-10 text-right"></div>
                </div>

                @Html.MVCGrid("Locations")
            </div>
        </div>
    </div>
</div>