@model Logistics.Entities.ExamResult

@{
    ViewBag.Icon = "pe-7s-like";
    ViewBag.Title = "Exam Details";
    ViewBag.Message = "Add, edit and view exam details.";

    Html.RenderPartial("~/Views/Shared/Luna/_PageHeader.cshtml");
}

@section CustomJs{
    <script src="@Url.Content("~/Scripts/Personnel/exam.js")" type="text/javascript"></script>
}

@using (Html.BeginForm("ExamDetails", "Personnel", FormMethod.Post, new { @id = "frmExam" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PersonId)

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-filled">
                <div class="panel-body">
                    <h4 class="m-b-xs">@(Model.Person.FullName)</h4>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="ExamId" class="col-sm-2 control-label">Exam</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("ExamId", ViewBag.ListOfExams as IEnumerable<SelectListItem>, "", new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ExamDate" class="col-sm-2 control-label">Exam Date</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.ExamDate, "{0:MM/dd/yyyy}", new { @class = "form-control" })</div>
                        </div>
                        <div class="form-group">
                            <label for="AssetId" class="col-sm-2 control-label">Asset</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("AssetId", ViewBag.ListOfAssets as IEnumerable<SelectListItem>, "", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ResultLookupId" class="col-sm-2 control-label">Result</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("ResultLookupId", ViewBag.ListOfResults as IEnumerable<SelectListItem>, "", new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ResultDate" class="col-sm-2 control-label">Result Date</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.ResultDate, new { @class = "form-control" })</div>
                        </div>
                        <div class="form-group">
                            <label for="Notes" class="col-sm-2 control-label">Notes</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.Notes, new { @class = "form-control" })</div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10">
                                <a id="btn-close" class="btn btn-default" title="Close">Close</a>
                                <button id="btn-save" class="btn btn-accent" title="Save">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
