@model Logistics.Entities.Contact.Address

@{
    ViewBag.Icon = "pe-7s-home";
    ViewBag.Title = "Address Details";
    ViewBag.Message = "Add, edit and view address details.";

    Html.RenderPartial("~/Views/Shared/Luna/_PageHeader.cshtml");
}

@section CustomJs{
    <script src="@Url.Content("~/Scripts/Personnel/address.js")" type="text/javascript"></script>
}

@using (Html.BeginForm("AddressDetails", "Personnel", FormMethod.Post, new { @id = "frmAddress" }))
{
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PersonId)

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-filled">
                <div class="panel-body">
                    <h4 class="m-b-xs">@(Model.Person.FullName)</h4>
                    <hr />
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label for="TypeLookupId" class="col-sm-2 control-label">Address Type</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("TypeLookupId", ViewBag.ListOfAddressTypes as IEnumerable<SelectListItem>, "", new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Address1" class="col-sm-2 control-label">Address</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.Address1, new { @class = "form-control", required = "required" })</div>
                        </div>
                        <div class="form-group">
                            <label for="Address2" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.Address2, new { @class = "form-control" })</div>
                        </div>
                        <div class="form-group">
                            <label for="Address3" class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.Address3, new { @class = "form-control" })</div>
                        </div>
                        <div class="form-group">
                            <label for="City" class="col-sm-2 control-label">City</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.City, new { @class = "form-control", required = "required" })</div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-2 control-label">State</label>
                            <div class="col-sm-10"></div>
                        </div>
                        <div class="form-group">
                            <label for="ZipCode" class="col-sm-2 control-label">Zip Code</label>
                            <div class="col-sm-10">@Html.TextBoxFor(model => model.ZipCode, new { @class = "form-control", required = "required" })</div>
                        </div>
                        <hr />
                        <div class="form-group">
                            <div class="col-sm-2"></div>
                            <div class="col-sm-10">
                                <a id="btn-close" class="btn btn-default" title="Save">Close</a>
                                <button id="btn-save" class="btn btn-accent" title="Save">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}