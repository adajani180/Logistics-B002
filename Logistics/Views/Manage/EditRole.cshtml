@model Logistics.Models.EditUserRole
@{
    ViewBag.Title = "Edit Users Role";
}
<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row pt-20">
    <div class="col-lg-12">
        <br />
        <h4>User Name: <em>@Model.Email</em></h4>
        <h4>User Role: <em>@Model.UserRole</em></h4>
        <hr />
    </div>
</div>

<div class="row pt-20">
    <div class="col-lg-12">
        @using (Html.BeginForm("ChangeRole", "Manage", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h4>Change Role</h4>
            <br />
            <p class="pt-20">Users Role: @Html.DropDownListFor(m => m.RoleList, ViewBag.allRolesList as SelectList, "-- Change Role --")</p>

            <input type="hidden" name="userid" value="@Model.Email" />

            <button type="submit" class="btn btn-success pt-10">Save</button>
        }
    </div>
</div>

