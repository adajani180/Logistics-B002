
@model Logistics.Entities.Exam

@{
    ViewBag.Icon = "pe-7s-note2";
    ViewBag.Title = "Exam Details";
    ViewBag.Message = "Add, edit and view exam details.";

    Html.RenderPartial("~/Views/Shared/Luna/_PageHeader.cshtml");
}

@section CustomJs{
    <script src="@Url.Content("~/Scripts/Exam/exam.js")" type="text/javascript"></script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-filled">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-horizontal">
                            @using (Html.BeginForm("Details", "Exams", FormMethod.Post, new { @id = "frmExam" }))
                            {
                                @Html.HiddenFor(model => model.Id)

                                <div class="form-group">
                                    <label for="Name" class="col-sm-2 control-label">Name</label>
                                    <div class="col-sm-10">@Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })</div>
                                </div>
                                <div class="form-group">
                                    <label for="Description" class="col-sm-2 control-label">Description</label>
                                    <div class="col-sm-10">@Html.TextBoxFor(model => model.Description, new { @class = "form-control" })</div>
                                </div>
                                <div class="form-group">
                                    <label for="ExpirationCycle" class="col-sm-2 control-label">Expiration Cycle</label>
                                    <div class="col-sm-10">
                                        @Html.DropDownList("ExpirationCycle", ViewBag.ListOfExpirationCycles as IEnumerable<SelectListItem>, "", new { @class = "form-control" })
                                    </div>
                                </div>
                                <hr />
                                <div class="form-group">
                                    <div class="col-sm-2"></div>
                                    <div class="col-sm-10">
                                        <a id="btn-close" class="btn btn-default" title="Close">Close</a>
                                        <button id="btn-save" class="btn btn-accent" title="Save">Save</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
